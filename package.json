{
  "name": "vannilli",
  "version": "1.0.0",
  "private": true,
  "description": "Music video AI platform - Pay for bars, not compute",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:web\" \"npm:dev:workers\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:workers": "cd apps/workers && npm run dev",
    "build": "npm run build:packages && npm run build:web && npm run build:workers",
    "build:packages": "npm run build --workspaces --if-present",
    "build:web": "cd apps/web && npm run build",
    "build:workers": "cd apps/workers && npm run build",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:e2e": "cd apps/web && npm run test:e2e",
    "lint": "npm run lint --workspaces --if-present",
    "deploy:workers": "cd apps/workers && npm run deploy",
    "db:migrate": "cd packages/database && supabase db push",
    "db:reset": "cd packages/database && supabase db reset",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vannilli/vannilli.git"
  },
  "keywords": [
    "music-video",
    "ai",
    "video-generation",
    "music-production"
  ],
  "author": "Vannilli Team",
  "license": "PROPRIETARY"
}

